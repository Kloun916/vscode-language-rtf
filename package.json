{
    "name": "rtf",
    "displayName": "RTF",
    "description": "RTF support for Visual Studio Code",
    "version": "2.2.0",
    "publisher": "alefragnani",
    "galleryBanner": {
        "color": "#4682B4",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.45.0"
    },
    "extensionKind": [
        "ui",
        "workspace"
    ],
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "RTF",
        "Rich",
        "RichTextFormat"
    ],
    "activationEvents": [
        "onLanguage:rtf",
        "onCommand:rtf.whatsNew"
    ],
    "main": "./dist/extension",
    "icon": "images/icon.png",
    "license": "SEE LICENSE IN LICENSE.md",
    "homepage": "https://github.com/alefragnani/vscode-language-rtf/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/alefragnani/vscode-language-rtf.git"
    },
    "bugs": {
        "url": "https://github.com/alefragnani/vscode-language-rtf/issues"
    },
    "contributes": {
        "languages": [
            {
                "id": "rtf",
                "aliases": [
                    "RTF",
                    "rtf"
                ],
                "extensions": [
                    ".rtf"
                ],
                "configuration": "./rtf.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "rtf",
                "scopeName": "rtf.text",
                "path": "./syntaxes/rtf.tmLanguage"
            }
        ],
        "commands": [
            {
                "command": "rtf.whatsNew",
                "title": "RTF: What's New"
            }
        ]
    },
    "eslintConfig": {
		"extends": [
			"vscode-ext"
		]
	},
    "scripts": {
        "build": "webpack --mode development",
        "watch": "webpack --watch --mode development --info-verbosity verbose",
        "vscode:prepublish": "webpack --mode production",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "compile": "tsc -watch -p ./",
        "lint": "eslint -c .eslintrc.js --ext .ts src vscode-whats-new"
    },
    "devDependencies": {
        "@types/node": "^10.14.17",
        "@types/vscode": "^1.45.0",
        "@typescript-eslint/eslint-plugin": "^3.8.0",
        "@typescript-eslint/parser": "^3.8.0",
        "eslint": "^7.6.0",
        "eslint-config-vscode-ext": "^1.0.0",
        "terser-webpack-plugin": "^1.2.1",
        "ts-loader": "^4.4.2",
        "typescript": "^3.5.1",
        "webpack": "^4.19.1",
        "webpack-cli": "^3.3.12"
    }
}
