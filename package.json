{
    "name": "rtf",
    "displayName": "RTF Language Support",
    "description": "RTF support for Visual Studio Code",
    "version": "0.2.0",
    "publisher": "alefragnani",
	"galleryBanner": {
		"color": "#4682B4",
		"theme": "dark"
	},
    "engines": {
        "vscode": "^1.6.0"
    },
    "categories": [
        "Languages"
    ],
    "keywords": [
        "RTF",
        "Rich",
        "RichTextFormat"
    ],
    "main": "./out/src/extension",
	"activationEvents": [
		"*"
	],
	"icon": "images/icon.png",
    "license": "SEE LICENSE IN LICENSE.md",
	"homepage": "https://github.com/alefragnani/vscode-language-rtf/blob/master/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/alefragnani/vscode-language-rtf.git"
	},
	"bugs": {
		"url": "https://github.com/alefragnani/vscode-language-rtf/issues"
	},
    "contributes": {
        "languages": [{
            "id": "rtf",
            "aliases": ["RTF", "rtf"],
            "extensions": [".rtf"],
            "configuration": "./rtf.configuration.json"
        }],
        "grammars": [{
            "language": "rtf",
            "scopeName": "rtf.text",
            "path": "./syntaxes/rtf.tmLanguage"
        }]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
	"devDependencies": {
		"vscode": "^1.0.0",
		"typescript": "^2.0.3"
	}
}